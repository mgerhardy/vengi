		list(APPEND CPACK_GENERATOR NSIS)
	endif()
	set(CPACK_PACKAGE_INSTALL_DIRECTORY "vengi")
	set(CPACK_PACKAGE_FILE_NAME "vengi")
	list(APPEND CPACK_GENERATOR WIX)
	configure_file(${ROOT_DIR}/LICENSE ${CMAKE_CURRENT_BINARY_DIR}/LICENSE.txt COPYONLY)
